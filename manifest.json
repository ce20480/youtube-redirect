{
  "manifest_version": 3,
  "name": "YouTube Redirector",
  "version": "1.0",
  "description": "Redirect YouTube video links to a productivity survey.",
  "permissions": ["storage", "webNavigation", "scripting", "activeTab"],
  "host_permissions": ["https://www.youtube.com/*"],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["scripts/content.js"]
    },
    {
      "matches": ["https://docs.google.com/forms/d/e/*"],
      "js": ["scripts/viewForm.js"]
    },
    {
      "matches": ["https://docs.google.com/forms/u/0/d/e/*"],
      "js": ["scripts/formResponse.js"]
    }
  ],
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "images/icon-16.png"
  }
}
